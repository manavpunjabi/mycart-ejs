      // $.get("/buynow", () => {
      //   // $("form.submit").click();

      // });
    });

    $(function() {
      $("#delay").on("click", function(e) {
        e.preventDefault();
        var self = this;
        setTimeout(function() {
          window.location.href = self.href;
        }, 2000);
      });
    });
  });
</script>
