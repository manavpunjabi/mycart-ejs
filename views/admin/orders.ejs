<%-include ('../_layouts/adminheader') %>
<h2 class="page-title">Orders</h2>
<br /><br />
<% if(count>0) {%>

<table class="table table-striped alignmiddle">
  <thead>
    <tr class="home">
      <th>Product Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Image</th>
      <th>Customer Name</th>
      <th>Customer Email</th>
      <th>Customer Username</th>
      <th>Customer Address</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach((order)=>{%>
    <tr>
      <td><%=order.title%></td>
      <td><%=parseInt(order.price)%></td>
      <td><%=order.qty%></td>
      <td>
        <% if(order.image=="") { %>
        <img id="noimage" src="/images/noimage.jpg" />
        <% } else {%>
        <img id="noimage" src="<%=order.image %> " />
        <% } %>
      </td>
      <td><%=order.name %></td>
      <td><%=order.email %></td>
      <td><%=order.username %></td>
      <td><%=order.address %></td>
    </tr>
    <%});%>
  </tbody>
</table>
<% }else { %>
<h3 class="text-center">No orders found</h3>
<% } %> <%-include ('../_layouts/adminfooter') %>
